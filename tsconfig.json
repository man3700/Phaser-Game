{
    "compilerOptions": {
        "target"            : "ES6",
        "module"            : "CommonJS",
        "rootDir"           : "src",
        "outDir"            : "dist",
        "noImplicitReturns" : true,
        "noImplicitThis"    : true,
        "noImplicitAny"     : true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}